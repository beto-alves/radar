<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    android:layout_margin="10dp" >

   <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <net.betoalves.radar.widgets.VerticalTextView
           android:id="@+id/textView_row_networking_topic"
           style="@style/verticalTextStyle"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:textAlignment="center"
           android:gravity="bottom|end"
           android:background="#2199E8"
           android:textColor="@android:color/white"
           android:text="@string/networking" />

       <TextView
           android:id="@+id/textView_row_networking_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintLeft_toRightOf="@+id/textView_row_networking_topic"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_margin="10dp"
           android:textAppearance="?android:attr/textAppearanceMedium"
           android:textStyle="bold"
           android:textColor="#2199E8"
           android:text="@string/networking"/>

       <TextView
           android:id="@+id/textView_row_networking_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintLeft_toRightOf="@+id/textView_row_networking_topic"
           app:layout_constraintTop_toBottomOf="@+id/textView_row_networking_title"
           android:layout_margin="10dp" />

       <TextView
           android:id="@+id/textView_row_networking_author"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           android:layout_margin="5dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>